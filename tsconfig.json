{
  "compilerOptions": {
    "declaration": false,
    "module": "es2015",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "outDir": "dist/_tmp/",
    "inlineSourceMap": true,
    "target": "es5",
    "jsx": "react",
    "pretty": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*",
    "typings"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
