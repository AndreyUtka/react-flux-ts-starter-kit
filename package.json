{
  "name": "react-redux-ts-starter-kit",
  "version": "1.0.0",
  "description": "starter kit which based on rollup/es6/typescript/react/redux/scss",
  "repository": "git+https://github.com/AndreyUtka/react-redux-ts-starter-kit.git",
  "author": "AndreyUtka <AndreyUtka@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AndreyUtka/react-redux-ts-starter-kit/issues"
  },
  "homepage": "https://github.com/AndreyUtka/react-redux-ts-starter-kit#readme",
  "scripts": {
    "clean": "rimraf ./dist && mkdir -p ./dist/build/",
    "pre-start": "npm run clean && npm run notify",
    "start": "BUILD_TYPE='start' npm run pre-start && npm run build:dev && npm run dev:watch",
    "build": "BUILD_TYPE='prod' npm run pre-start && npm run build:prod",
    "build:pre-build": "npm run build:tpl && npm run build:vendor",
    "build:dev": "npm run build:pre-build && npm run build:ts && npm run scss:build && npm run lint",
    "build:prod": "npm run build:pre-build && npm run build:ts-prod && npm run rollup:prod && npm run scss:build",
    "build:ts": "tsc -p tsconfig.dev.json",
    "build:ts-prod": "tsc -p tsconfig.prod.json",
    "build:tpl": "node build-process/build-tpl.js",
    "build:vendor": "node build-process/make-vendor.js",
    "dev:watch": "npm run lint:watch & npm run dev:ts & npm run rollup:dev & npm run scss:dev & npm run server:run & wait",
    "dev:ts": "npm run build:ts -- --watch",
    "rollup:dev": "rollup -c build-process/rollup.config.dev.js --watch",
    "rollup:prod": "rollup -c build-process/rollup.config.prod.js",
    "scss:build": "node-sass src/ -o dist/build --output-style compressed",
    "scss:dev": "npm run scss:build -- -w",
    "notify": "node build-process/notify.js",
    "lint:watch": "onchange 'src/**/*.{ts,tsx}' -d 5000 -- npm run lint",
    "lint": "tslint --project ./tsconfig.json --force --format stylish",
    "server:run": "node server/app.js",
    "test": "NODE_ENV=test jest --config jest.config.json",
    "test:watch": "npm run test -- --watch",
    "test:coverage": "npm run test -- --coverage"
  },
  "dependencies": {
    "@types/react": "16.0.13",
    "@types/react-dom": "16.0.1",
    "@types/react-router-dom": "4.0.8",
    "chalk": "2.2.0",
    "concat": "1.0.3",
    "immutable": "3.8.2",
    "less": "3.0.0-alpha.3",
    "prettier": "1.7.4",
    "pug": "2.0.0-rc.4",
    "react": "16.0.0",
    "react-dom": "16.0.0",
    "react-redux": "5.0.6",
    "react-router-dom": "4.2.2",
    "redux": "3.7.2",
    "rimraf": "2.6.2",
    "rollup": "0.50.0",
    "rollup-plugin-node-resolve": "3.0.0",
    "rollup-plugin-replace": "2.0.0",
    "tslib": "1.8.0",
    "typescript": "2.5.3"
  },
  "devDependencies": {
    "@types/jest": "21.1.4",
    "browser-sync": "2.18.13",
    "jest": "21.2.1",
    "rollup-plugin-sourcemaps": "0.4.2",
    "rollup-watch": "4.3.1",
    "ts-jest": "21.1.3"
  }
}
